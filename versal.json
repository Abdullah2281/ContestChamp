{
    "version": 2,
    "builds": [
        {
            "src": "ContestChamp_backend/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "ContestChamp_backend/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    },
    "buildCommand": "pip3 install -r requirements.txt && python3 manage.py collectstatic --noinput && python3 manage.py migrate"
}